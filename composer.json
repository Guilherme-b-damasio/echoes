{
    "name": "seu-usuario/seu-projeto",
    "description": "Um projeto PHP b√°sico com autoloading configurado.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "giorgiolucca/vagalume-sdk": "^1.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "App\\Controller\\": "src/controller/",
            "App\\entity\\": "src/models/entity/",
            "App\\repository\\": "src/models/repository/",
            "App\\Player\\": "src/player/",
            "App\\Songs\\": "src/songs/",
            "App\\Temp\\": "src/temp/",
            "App\\View\\Includes\\": "src/view/includes/",            
            "App\\config\\": "config/",           
            "App\\service\\": "src/models/service/"            
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('tests/bootstrap.php') && require 'tests/bootstrap.php';\""
        ]
    },
    "config": {
        "optimize-autoloader": true
    },
    "authors": [
        {
            "name": "Seu Nome",
            "email": "seu-email@example.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}
